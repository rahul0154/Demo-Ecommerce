{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="container-fluid loginPageContainer">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="row" style="background: #FBFBFB;margin-bottom: 10px;">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <h3 class="pull-left" style="margin:10px 0px;">&nbsp;Product List&nbsp;</h3>
                </div>

                <span class="col-lg-8 col-md-8 col-sm-8">
                    <div class="pull-right">
                        <button style="margin-top:2px;" class="btn btn-primary"
                                onclick='window.location.href="{{ path('app_products_new') }}"'>
                            Add Product
                        </button>
                    </div>
                </span>
            </div>

            <table class="table" id="product_table" style="border: 2px solid #357ebd;
    padding: 10px;">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Product Image</th>
                    <th>List Price</th>
                    <th>Qty In Stock</th>
                    <th>Part Number</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>{{ product.id }}</td>
                        <td>{{ product.productName }}</td>
                        <td>{{ product.productImage }}</td>
                        <td>{{ product.listPrice }}</td>
                        <td>{{ product.qtyInStock }}</td>
                        <td>{{ product.partNumber }}</td>
                        <td>
                            <button style="margin:10px 0px;" class="btn btn-primary"
                                    onclick='window.location.href="{{ path('app_products_show', {'id': product.id}) }}"'>
                                View
                            </button>
                            <button style="margin:10px 0px;" class="btn btn-success"
                                    onclick='window.location.href="{{ path('app_products_edit', {'id': product.id}) }}"'>
                                Edit
                            </button>

                            <form style="display: inline-block;" method="post" action="{{ path('app_products_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button style="margin:10px 0px;" class="btn btn-danger" >
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        //Document Ready Function
        $(function() {
            var table = $('#product_table').DataTable( {} );
        });
    </script>
{% endblock %}