{% extends 'admin/base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}

    <div class="container-fluid loginPageContainer">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="row" style="background: #FBFBFB;">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <h4 class="pull-left" style="margin:10px 0px;">&nbsp;Product Details&nbsp;</h4>
                </div>

                <span class="col-lg-8 col-md-8 col-sm-8">
                    <div class="pull-right">
                        <button style="margin-top:2px;" class="btn btn-primary"
                                onclick='window.location.href="{{ path('admin_dashboard') }}"'>
                            Back To List
                        </button>
                        <button style="margin-top:2px;" class="btn btn-default"
                                onclick='window.location.href="{{ path('app_products_edit', {'id': product.id}) }}"'>
                            Edit Product
                        </button>
                         <form style="display: inline-block;" method="post"
                               action="{{ path('app_products_delete', {'id': product.id}) }}"
                               onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button style="margin:10px 0px;" class="btn btn-danger">
                                    Delete
                                </button>
                         </form>
                    </div>
                </span>
            </div>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Product Name</th>
                    <td>{{ product.productName }}</td>
                </tr>
                <tr>
                    <th>Product Image</th>
                    <td>{{ product.productImage }}</td>
                </tr>
                <tr>
                    <th>List Price</th>
                    <td>{{ product.listPrice }}</td>
                </tr>
                <tr>
                    <th>Qty In Stock</th>
                    <td>{{ product.qtyInStock }}</td>
                </tr>
                <tr>
                    <th>Part Number</th>
                    <td>{{ product.partNumber }}</td>
                </tr>
                <tr>
                    <th>Part Details</th>
                    <td>{{ product.productDescription }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
