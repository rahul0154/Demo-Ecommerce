{% extends 'frontend/base.html.twig' %}


{% block body %}
    <div class="container-fluid loginPageContainer">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="row" style="background: #FBFBFB;">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <h4 class="pull-left" style="margin:10px 0px;">&nbsp;Products&nbsp;</h4>
                </div>

                <div class="col-lg-8 col-md-8 col-sm-8">
                    <div class="pull-right" style="display: inline-flex;">
                        <button style="margin-top:2px;" class="btn btn-primary"
                                onclick='window.location.href="{{ path('frontend_cart') }}"'>
                            Cart ({{ total_in_cart }})
                        </button>
                    </div>
                </div>
            </div>


            <div class="listing-section">
                {% for product in products %}
                    <div class="product">
                        <div class="image-box">
                            <div class="images">
                                <img class="prod_image" src="{{ product.productImage }}" alt="{{ product.productName }}">
                            </div>
                        </div>
                        <div class="text-box">
                            <h3 class="item">
                                <td>{{ product.productName }}</td>
                            </h3>
                            <h4 class="price">
                                <td>{{ product.sellingPrice }}</td>
                            </h4>
                            <p class="description">
                            <td>{{ product.productDescription }}</td>
                            </p>
                            <form style="display: inline-block;" method="post"
                                  action="{{ path('app_product_cart', {'id': product.id}) }}">
                                <button class="btn btn-success">
                                    Add To Cart
                                </button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
