{% extends 'frontend/base.html.twig' %}


{% block body %}
    <div class="container-fluid loginPageContainer">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="row" style="background: #FBFBFB;">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <h4 class="pull-left" style="margin:10px 0px;">&nbsp;User Cart&nbsp;</h4>
                </div>

                <div class="col-lg-8 col-md-8 col-sm-8">
                    <div class="pull-right" style="display: inline-flex;">
                        <button style="margin-top:2px;" class="btn btn-primary"
                                onclick='window.location.href="{{ path('frontend_dashboard') }}"'>
                            Home
                        </button>
                    </div>
                </div>
            </div>

            <div style="margin-top: 20px;" class="alert alert-success">
                Total Amount: <b class="total_amount">{{ total_amount }}</b>
            </div>

            <table id="cart_table" class="table">
                <thead>
                <tr>
                    <th>Part Number</th>
                    <th>Product Name</th>
                    <th>Product Image</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr class="product_row_{{ product['id'] }}">
                        <td>{{ product['partnumber'] }}</td>
                        <td>{{ product['name'] }}</td>
                        <td>{{ product['image'] }}</td>
                        <td>
                            <span class="product_price">
                                {{ product['price'] }}
                            </span>
                        </td>
                        <td>
                            <button class="btn btn-default dec_qty"
                                    onclick="updateCartQty(this, '{{ path('update_product_cart') }}','{{ product['id'] }}')">
                                -
                            </button>
                            &nbsp;&nbsp;
                            <span class="product_qty">{{ product['qty'] }}</span>&nbsp;&nbsp;
                            <button class="btn btn-default inc_qty"
                                    onclick="updateCartQty(this, '{{ path('update_product_cart') }}','{{ product['id'] }}')">
                                +
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-danger remove_cart"
                                    onclick="removeFromCart('{{ path('remove_product_cart', {'id': product['id']}) }}','{{ product['id'] }}')">
                                Remove From Cart
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
